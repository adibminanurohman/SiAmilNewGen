<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@drawable/backgroundblue400"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="121.7dp"
            android:layout_height="118.1dp"
            app:srcCompat="@drawable/peganghp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Presensi kapan saja dan dimana saja"
            android:gravity="center_horizontal"
            android:textColor="@color/gray_900"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/gray_400"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView4"
            android:gravity="center_horizontal"
            android:text="Dengan SiAmil presensi menjadi lebih mudah" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:layout_above="@id/loginButton">


        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:fontFamily="@font/poppins"
            android:textSize="13sp"
            android:textColorHint="@color/gray_400"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Sandi"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            android:inputType="textPassword"
            android:textColorHint="@color/gray_400"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_sandi"
            android:drawablePadding="10dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa sandi?"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:textColor="@color/blue_400"/>

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:text="Masuk" />


</RelativeLayout>